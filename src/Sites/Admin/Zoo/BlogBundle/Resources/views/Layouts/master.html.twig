            <a class="btn btn-primary btn-lg" href="{{ path("admin_zoo_blog_post_new") }}"><i class="fa fa-pencil"></i> Ecrire</a>
            <hr/>
            <h4><i class="fa fa-file-text-o"></i> Articles</h4>
            <ul class="nav nav-sidebar">
                <li {% if short_page_title == "all_posts" %}class="active" {% endif %}><a href="{{ path("admin_zoo_blog_homepage") }}"><i class="fa fa-list-ul"></i> Liste</a></li>
