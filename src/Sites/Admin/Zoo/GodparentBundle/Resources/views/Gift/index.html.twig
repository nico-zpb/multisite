{% extends "AdminZooGodparentBundle:Layouts:master.html.twig" %}
{% set page_title = "Parrainages - Les cadeaux" %}
{% set active_sidenav = "godparent_gifts" %}
{% block content %}
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <td>id</td>
                    <td>Nom</td>
                    <td>Position</td>
                    <td>Description</td>
                    <td>NotaBene</td>
                    <td>Editer</td>
                    <td>Supprimer</td>
                </tr>
            </thead>
            <tbody>
            {% if gifts|length<1 %}
                <tr class="warning">
                    <td colspan="7">Il n'y a aucun cadeaux enregistrés. <a href="#"><i class="fa fa-hand-o-right"></i> Créer</a></td>
                </tr>
            {% else %}
                {% for gift in gifts %}
                    <tr>
                        <td>{{ gift.id }}</td>
                        <td>{{ gift.name }}</td>
                        <td>{{ gift.position }}</td>
                        <td>{{ gift.description }}</td>
                        <td>{{ gift.notabene }}</td>
                        <td><a href="#" class="btn btn-default"><i class="fa fa-pencil-square-o"></i></a></td>
                        <td><a href="#" class="btn btn-default delete-alert" data-name="{{ gift.name }}"><i class="fa fa-trash-o"></i></a></td>
                    </tr>
                {% endfor %}
            {% endif %}
            </tbody>
        </table>
    </div>
{% endblock %}
{% block footScripts %}
    {{ parent() }}
    <script>
        $(function(){
            $(".delete-alert").on("click", function(e){
                e.preventDefault();
                var name = $(this).data("name");
                if(window.confirm("Attention, cette action est irréversible, êtes-vous certain de vouloir continuer et effacer '" + name + "' ?")){
                    window.location.href = $(this).attr("href");
                }
            });
        });
    </script>

{% endblock %}
