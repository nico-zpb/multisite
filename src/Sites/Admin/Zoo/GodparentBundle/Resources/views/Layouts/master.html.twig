{% extends "AdminCommonBaseBundle:Layouts:master.html.twig" %}
{% set active_site = "godparent" %}
{% set short_page_title = ( short_page_title is defined) ? short_page_title : "all_gifts" %}


{% block main %}
    <div class="row">
        <div class="col-sm-3 col-md-2">
            <h4><i class="fa fa-gift"></i> Les cadeaux</h4>
            <ul class="nav nav-sidebar">
                <li {% if short_page_title == "all_gifts" %}class="active" {% endif %}><a href="{{ path("admin_zoo_godparent_gifts_homepage") }}"><i class="fa fa-list"></i> Liste</a></li>
                <li {% if short_page_title == "new_gift" %}class="active" {% endif %}><a href="#"><i class="fa fa-plus-square-o"></i> Nouveau cadeau</a></li>
            </ul>

        </div>
        <div class="col-sm-9 col-md-10">
            {% block content %}{% endblock %}
        </div>
    </div>

{% endblock %}
