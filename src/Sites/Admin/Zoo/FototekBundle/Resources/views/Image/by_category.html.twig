{% extends "AdminZooFototekBundle:Layouts:master.html.twig" %}

{% set page_title = "Photothèque - Zoo - Gestion des images" %}


{% block content %}

    <h2>Liste des images appartenant à la catégorie &laquo;{{ category.name }}&raquo;</h2>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Vignette</th>
                <th>Id</th>
                <th>Nom</th>
                <th>Titre</th>
                <th>Position</th>
                <th colspan="2">Déplacer</th>
                <th>Largeur</th>
                <th>Hauteur</th>
                <th>Editer</th>
                <th>Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% if images|length <1 %}
                <tr class="warning">
                    <td colspan="7">Il n'y a pas d'images enregistrées dans la catégorie &laquo;{{ category.name }}&raquo;</td>
                </tr>
            {% else %}
                {% for image in images %}
                    <tr>
                        <td><img src="{{ thumb_dir ~ image.name}}" alt="" title="{{ image.title|raw }}" width="30"/></td>
                        <td>{{ image.id }}</td>
                        <td>{{ image.name }}</td>
                        <td>{{ image.title|raw }}</td>
                        <td>{{ image.position }}</td>
                        <td><a href="{{ path("admin_zoo_fototek_image_move_up", {id:image.id}) }}" class="btn btn-default"><i class="fa fa-caret-up"></i></a>&nbsp;<a href="{{ path("admin_zoo_fototek_image_move_down", {id:image.id}) }}" class="btn btn-default"><i class="fa fa-caret-down"></i></a></td>
                        <td></td>
                        <td>{{ image.width }}</td>
                        <td>{{ image.height }}</td>
                        <td><a href="#"><i class="fa fa-pencil-square-o"></i></a></td>
                        <td><a href="#" class="delete-alert" data-name="{{ image.name }}"><i class="fa fa-trash-o"></i></a></td>
                    </tr>
                {% endfor %}
            {% endif %}
            </tbody>
        </table>
    </div>

    {% if images|length>0 %}
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <div class="row">
                {% for image in images %}
                    <div class="col-md-3">
                        <div class="thumbnail">
                            <img src="{{ thumb_dir ~ image.name }}" alt="" title="{{ image.title|raw }}"/>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    {% endif %}

{% endblock %}
{% block footScripts %}
    {{ parent() }}
    <script>
        $(function(){
            $(".delete-alert").on("click", function(e){
                e.preventDefault();
                var name = $(this).data("name");
                if(window.confirm("Attention, cette action est irréversible, êtes-vous certain de vouloir continuer et effacer '" + name + "' ?")){
                    window.location.href = $(this).attr("href");
                }
            });
        });
    </script>

{% endblock %}
