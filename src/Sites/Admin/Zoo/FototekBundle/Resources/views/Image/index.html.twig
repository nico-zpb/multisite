{% extends "AdminZooFototekBundle:Layouts:master.html.twig" %}

{% set page_title = "Photothèque - Zoo - Gestion des images" %}


{% block content %}

    <h2>Toutes les Images</h2>

    <div class="row">
        <div class="col-sm-4 col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Filtrer par catégorie
                </div>
                <div class="panel-body">
                    <form class="form-inline" method="post" action="{{ path("admin_zoo_fototek_image_filter_by_cat") }}">
                        <div class="form-group">
                            <select class="form-control" name="filter_by_category_form[category]" id="filter_by_category_form_category">
                                {% for cat in categories %}
                                    <option value="{{ cat.id }}">{{ cat.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <input name="filter_by_category_form[_token]" type="hidden" value="{{ csrf_token("filter_by_category") }}"/>
                        <button type="submit" class="btn btn-default">Filtrer</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-sm-4 col-md-4"></div>
        <div class="col-sm-4 col-md-4"></div>
    </div>



    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Vignette</th>
                <th>Id</th>
                <th>Nom</th>
                <th>Titre</th>
                <th>Position</th>
                <th>Editer</th>
                <th>Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% if images|length <1 %}
                <tr class="warning">
                    <td colspan="7">Il n'y a pas d'images enregistrées. <a href="{{ path("admin_zoo_fototek_image_new") }}"><i class="fa fa-hand-o-right"></i> Upload</a></td>
                </tr>
            {% else %}
                {% for image in images %}
                    <tr>
                        <td></td>
                        <td>{{ image.id }}</td>
                        <td>{{ image.name }}</td>
                        <td>{{ image.title|raw }}</td>
                        <td>{{ image.position }}</td>
                        <td><a href="#"><i class="fa fa-pencil-square-o"></i></a></td>
                        <td><a href="#" class="delete-alert" data-name="{{ image.name }}"><i class="fa fa-trash-o"></i></a></td>
                    </tr>
                {% endfor %}
            {% endif %}
            </tbody>
        </table>
    </div>

{% endblock %}
{% block footScripts %}
    {{ parent() }}
    <script>
        $(function(){
            $(".delete-alert").on("click", function(e){
                e.preventDefault();
                var name = $(this).data("name");
                if(window.confirm("Attention, cette action est irréversible, êtes-vous certain de vouloir continuer et effacer '" + name + "' ?")){
                    window.location.href = $(this).attr("href");
                }
            });
        });
    </script>

{% endblock %}
