{% extends "AdminZooFototekBundle:Layouts:master.html.twig" %}

{% set page_title = "Photothèque - Zoo - Gestion des catégories - Edition" %}

{% block content %}
    <div class="row">
        <div class="col-md-6 col-sm-6">
            <form class="form-horizontal" action="{{ path("admin_zoo_fototek_category_update", {id: entity.id}) }}" method="post">
                {% if form_errors|length>0 %}
                    {% for error in form_errors %}
                        <div class="alert alert-danger" role="alert">{{ error }}</div>
                    {% endfor %}
                {% endif %}
                <div class="form-group">
                    <label class="col-md-2 control-label" for="update_category_form_name">Nom*</label>
                    <div class="col-md-8">
                        <input class="form-control" type="text" name="update_category_form[name]" id="update_category_form_name" required="required" value="{{ entity.name }}"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label" for="update_category_form_slug">Alias (slug) </label><button type="button" class="btn btn-primary" data-toggle="popover" title="aide" data-content="Non requis, si laissé vide, sera créé automatiquement. Seuls les lettres minuscules de a à z, les chiffres et le tiret sont acceptés."><i class="fa fa-question-circle"></i></button>
                    <div class="col-md-8">
                        <input class="form-control" type="text" name="update_category_form[slug]" id="update_category_form_slug" value="{{ entity.slug }}"/>
                        <span class="help-block">Effacer pour forcer la régénération</span>
                    </div>
                </div>
                <input name="update_category_form[_token]" type="hidden" value="{{ csrf_token("update_category") }}"/>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-8">
                        <button class="btn btn-primary" type="submit">Mettre à jour</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-6 col-sm-6"></div>
    </div>
{% endblock %}
{% block footScripts %}
    {{ parent() }}
    <script>
        $(function(){
            $("[data-toggle='popover']").popover();
        });
    </script>

{% endblock %}
