{% extends "AdminZooFototekBundle:Layouts:master.html.twig" %}

{% set page_title = "Photothèque - Zoo - Gestion des catégories" %}


{% block content %}

<div class="table-responsive">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>#id</th>
                <th>Nom</th>
                <th>Alias (slug)</th>
                <th>Voir les images associées</th>
                <th>Editer</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% if categories|length < 1 %}
            <tr class="warning">
                <td colspan="6">
                    Il n'a aucune catégorie enregistrée. <a href="{{ path("admin_zoo_fototek_category_new") }}"><i class="fa fa-hand-o-right"></i> Créer une catégorie</a>
                </td>
            </tr>
        {% else %}
            {% for cat in categories %}
                <tr>
                    <td>{{ cat.id }}</td>
                    <td>{{ cat.name }}</td>
                    <td>{{ cat.slug }}</td>
                    <td><a href="#"><i class="fa fa-picture-o"></i></a></td>
                    <td><a href="{{ path("admin_zoo_fototek_category_edit", {id: cat.id}) }}"><i class="fa fa-pencil-square-o"></i></a></td>
                    <td><a href="#"><i class="fa fa-trash-o"></i></a></td>
                </tr>
            {% endfor %}
        {% endif %}
        </tbody>
    </table>
</div>

{% endblock %}
