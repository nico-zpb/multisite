            <a class="btn btn-primary btn-lg" href="{{ path("admin_zoo_fototek_image_new") }}"><i class="fa fa-upload"></i> Upload</a>
            <hr/>
            <ul class="nav nav-sidebar">
                <li><a href="{{ path("admin_zoo_fototek_homepage") }}"><i class="fa fa-home"></i> Photothèque Zoo</a></li>
            </ul>
            <hr/>
            <h4><i class="fa fa-picture-o"></i> Images</h4>
