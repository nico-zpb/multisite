{% block footScripts %}
    <script src="/js/vendor/jquery-2.1.1.min.js"></script>
    <script src="/js/vendor/bootstrap.min.js"></script>
    <script src="/js/vendor/jquery.nanoscroller.min.js"></script>
    <script>
        $(function(){
            $(".nano").nanoScroller();
            var headers = $("#sidebar-content").find("h3");
            headers.each(function(idx,el){
                var caret = $(el).find(".fa-caret-down");
                if($(el).hasClass("open")){
                    caret.addClass("fa-flip-vertical");
                }
            });
            headers.on("click", function(e){
                e.preventDefault();
                var header = e.target;
                var caret = $(header).find(".fa-caret-down");
                if($(header).hasClass("open")){
                    $(header).removeClass("open");
                    caret.removeClass("fa-flip-vertical");
                } else {
                    $(header).addClass("open");
                    caret.addClass("fa-flip-vertical");
                }
            });
        });
    </script>
    <script>
        var endTime = (new Date()).getTime();
        var loadingTime = Math.round(((endTime - startTime)/1000)*100)/100;
        var stat = document.createElement("div");
        stat.classList.add("bg-info");
        stat.style.position = "absolute";
        stat.style.bottom = 50 + "px";
        stat.style.right = 0 + "px";
        stat.style.zIndex = 10000;
        stat.innerHTML = "chargement : " + loadingTime + " secondes.";
        document.body.appendChild(stat);
    </script>

